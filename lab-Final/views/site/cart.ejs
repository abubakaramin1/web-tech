<a href="/products" class="btn btn-info">Continue Shopping</a>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Product Price</th>
        </tr>

    </thead>
    <tbody>
        <% for(var i=0;i<products.length;i++) {let product=products[i];%>
            <tr>
                <td>
                    <%=product.name %>
                </td>
                <td>
                    <%=product.price %>
                </td>
            </tr>
            <% } %>
    <tfoot>
        <tr>
            <td>Total:</td>
            <td>
                <%=total %>
            </td>
        </tr>
    </tfoot>
    </tbody>
</table>

<div class="d-flex justify-content-end mt-4">
    <% if(products.length> 0) { %>
        <a href="/checkout" class="btn btn-primary btn-lg">
            Checkout Now
        </a>
        <% } %>
</div>