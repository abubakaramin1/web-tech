<div class="container mt-5">
    <h2 class="mb-4">Checkout</h2>

    <div class="row">
        <div class="col-md-7">
            <div class="card  mb-4">
                <div class="card-body">
                    <h5 class="card-title mb-4">Customer Information</h5>
                    <form action="/checkout" method="POST">
                        <div class="mb-3">
                            <label for="customerName" class="form-label">Full Name</label>
                            <input type="text" class="form-control" id="customerName" name="customerName" required
                                placeholder="John Doe">
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email Address</label>
                            <input type="email" class="form-control" id="email" name="email" required
                                placeholder="john@example.com">
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg w-100 mt-3">Place Order</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-5">
            <div class="">
                <div class="card-body">
                    <h5 class="card-title mb-4">Order Summary</h5>
                    <ul class="list-group list-group-flush mb-3">
                        <% products.forEach(product=> { %>
                            <li
                                class="list-group-item d-flex justify-content-between align-items-center bg-light mb-1 rounded">
                                <span>
                                    <%= product.name %>
                                </span>
                                <span class="fw-bold">$<%= product.price %></span>
                            </li>
                            <% }) %>
                    </ul>
                    <div class="d-flex justify-content-between align-items-center mt-3 pt-3 border-top">
                        <span class="h4">Total Amount</span>
                        <span class="h4 text-primary">$<%= total %></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 15px;
        transition: transform 0.3s;
    }

    .btn-primary {
        font-weight: bold;
    }

    .bg-light {
        background-color: #f8f9fa !important;
    }
</style>