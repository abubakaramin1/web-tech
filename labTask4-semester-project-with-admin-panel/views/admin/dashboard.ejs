<div class="row">
  <!-- Total Products Card -->
  <div class="col-md-6 mb-4">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">
          <i class="fas fa-box text-primary"></i> Total Products
        </h5>
        <h2 class="text-primary"><%= totalProducts %></h2>
        <p class="text-muted">Products in database</p>
      </div>
    </div>
  </div>

  <!-- Quick Actions Card -->
  <div class="col-md-6 mb-4">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">
          <i class="fas fa-bolt text-warning"></i> Quick Actions
        </h5>
        <a href="/admin/products/create" class="btn btn-primary me-2">
          <i class="fas fa-plus"></i> Add Product
        </a>
        <a href="/admin/products" class="btn btn-secondary">
          <i class="fas fa-list"></i> View All Products
        </a>
      </div>
    </div>
  </div>
</div>

<!-- Products by Category -->
<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">
          <i class="fas fa-chart-pie text-info"></i> Products by Category
        </h5>
      </div>
      <div class="card-body">
        <% if (productsByCategory && productsByCategory.length > 0) { %>
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Category</th>
                <th>Number of Products</th>
              </tr>
            </thead>
            <tbody>
              <% productsByCategory.forEach(function(item) { %>
                <tr>
                  <td><%= item._id || 'Uncategorized' %></td>
                  <td><strong><%= item.count %></strong></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        <% } else { %>
          <p class="text-muted">No products found. <a href="/admin/products/create">Add your first product!</a></p>
        <% } %>
      </div>
    </div>
  </div>
</div>
